{
  "manifest_version": 3,
  "name": "方寸",
  "version": "0.0.3",
  "description": "于方寸之间，见天地之宽 - 个性化网站导航，快速访问常用网站",

  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  
  "host_permissions": [
    "https://api.unsplash.com/*",
    "https://www.google.com/*",
    "https://favicon.yandex.net/*",
    "https://icons.duckduckgo.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "icons": {
    "16": "icons/icon-16.svg",
    "32": "icons/icon-48.svg",
    "48": "icons/icon-48.svg",
    "128": "icons/icon.svg"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "方寸",
    "default_icon": {
      "16": "icons/icon-16.svg",
      "32": "icons/icon-48.svg",
      "48": "icons/icon-48.svg",
      "128": "icons/icon.svg"
    }
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' data: https:;"
  }
}
